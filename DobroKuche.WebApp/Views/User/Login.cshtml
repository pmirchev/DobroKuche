@model LoginViewModel

@{
	ViewData["Title"] = "Вход";
}

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/login.css">
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
	<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
		<div class="container">
			<div class="card login-card">
				<div class="row no-gutters">
					<div class="col-md-5">
						<img src="~/img/login-dog.jpg" alt="login" class="login-card-img">
					</div>
					<div class="col-md-7">
						<div class="card-body">
							<div class="brand-wrapper">
								<img src="~/img/logo-dog.svg" alt="logo" class="img-fluid">
							</div>
							<center>
								<p class="login-card-description">Влез в своя акаунт</p>
								<form id="account" method="post">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group">
										<label asp-for="@Model.Email" for="email" class="sr-only">Email</label>
										<input asp-for="@Model.Email" type="email" name="email" id="email" class="form-control" autocomplete="email" placeholder="Email" aria-required="true">
										<span asp-validation-for="@Model.Email" class="text-danger"></span>
									</div>
									<div class="form-group mb-4">
										<label asp-for="@Model.Password" for="password" class="sr-only">Password</label>
										<input asp-for="@Model.Password" type="password" name="password" id="password" class="form-control" placeholder="Парола" autocomplete="current-password" aria-required="true">
										<span asp-validation-for="@Model.Password" class="text-danger"></span>
									</div>
									<button id="login-submit" type="submit" class="btn btn-block login-btn mb-4">Вход</button>
								</form>
								<a class="forgot-password-link" href="#!">Забравена парола?</a>
								<p class="login-card-footer-text">Нямаш акаунт? <a asp-controller="User" asp-action="Register">Регистрирай се от тук</a></p>
							</center>
							@*<nav class="login-card-footer-nav">
								<a href="#!">Terms of use.</a>
								<a href="#!">Privacy policy</a>
							</nav>*@
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>